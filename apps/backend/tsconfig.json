{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@application/*": [
                "application/*"
            ],
            "@domain/*": [
                "domain/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ]
        },
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}