{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@application/*": [
                "src/application/*"
            ],
            "@domain/*": [
                "src/domain/*"
            ],
            "@infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@test/*":[
                "test/*"
            ]
        },
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}