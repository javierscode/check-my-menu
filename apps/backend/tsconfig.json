{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "lib": ["es6"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@application/*": [
                "src/application/*"
            ],
            "@domain/*": [
                "src/domain/*"
            ],
            "@infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@test/*":[
                "test/*"
            ]
        },
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}