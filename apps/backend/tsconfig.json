{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["es6"],
        "module": "commonjs",
        "types": ["reflect-metadata", "jest"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@application/*": [
                "src/application/*"
            ],
            "@domain/*": [
                "src/domain/*"
            ],
            "@infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@test/*":[
                "test/*"
            ]
        },
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.js",
        ".eslintrc.js"
    ],
    "exclude": [
        "node_modules"
    ]
}