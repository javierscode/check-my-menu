{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "@application/*": [
            "src/application/*"
        ],
        "@domain/*": [
            "src/domain/*"
        ],
        "@infrastructure/*": [
            "src/infrastructure/*"
        ],
        "@test/*":[
            "test/*"
        ]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules"]
}
