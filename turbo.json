{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["ALLOWED_ORIGIN","PORT","NODE_ENV", "POSTGRES_USER", "POSTGRES_PASSWORD", "POSTGRES_DB", "BACKEND_URL","FRONTEND_URL", "COOKIE_AUTH_KEY"],
  "pipeline": {
    "backend#docker:up": {
      "inputs": ["backend/docker-compose.yml", "backend/package.json"]
    },
    "backend#prisma:generate": {
      "inputs": ["backend/src/infrastructure/persistence/schema.prisma"]
    },
    "build": {
      "dependsOn": ["backend#prisma:generate","^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "outputs": [], 
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
    },
    "lint": {
      "outputs": [] 
    },
    "dev": {
      "dependsOn": ["backend#docker:up", "backend#prisma:generate"],
      "cache": false
    },
    "start":{
      "dependsOn": ["backend#docker:up","build"],
      "cache": false
    }
  }
}
